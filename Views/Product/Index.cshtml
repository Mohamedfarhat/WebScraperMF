@model IEnumerable<WebScraperMF.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <h3 class="h3">shopping Demo-1 </h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6 mb-2">
                <div class="product-grid">
                    <div class="product-image">
                        <a href="#">
                            <img class="pic-1" src="@item.productImgUrl" style="height:250px;">
                        </a>
                        <ul class="social">
                            <li><a href="@item.productUrl" data-tip="Quick View"><i class="fa fa-search"></i></a></li>

                        </ul>
                        <span class="product-new-label">@item.productWebSite</span>

                    </div>

                    <div class="product-content">
                        <h3 class="title"><a href="@item.productUrl">@item.productTitle</a></h3>
                        <div class="price">
                            @item.productPriceCurrency @item.productPrice
                        </div>
                    </div>
                </div>
            </div>
            <hr>
        }
    </div>
</div>

